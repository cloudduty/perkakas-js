{
  "name": "@cloudduty/perkakas-js",
  "version": "1.0.2",
  "description": "Javascript common tools",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cloudduty/perkakas-js.git"
  },
  "keywords": [
    "javascript",
    "common",
    "tools",
    "simple",
    "javascript",
    "utilities"
  ],
  "author": "cloudduty",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cloudduty/perkakas-js/issues"
  },
  "homepage": "https://github.com/cloudduty/perkakas-js#readme",
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.5",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "date-fns": "^2.21.1"
  },
  "directories": {
    "lib": "lib"
  },
  "engines": {
    "node": ">= 14.0.0"
  }
}
